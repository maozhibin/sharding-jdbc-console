<!--
	Configuration后面的status，这个用于设置log4j2自身内部的信息输出，可以不设置，当设置成trace时，你会看到log4j2内部各种详细输出。
-->
<!--
	monitorInterval：Log4j能够自动检测修改配置 文件和重新配置本身，设置间隔秒数。
-->
<Configuration monitorInterval="30" status="INFO" strict="true">

    <Properties>
        <Property name="log.home">/logs/console</Property>
        <Property name="layout.pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %content%n</Property>
    </Properties>

    <Appenders>

        <RollingRandomAccessFile fileName="${log.home}/console.log"
                                 filePattern="${log.home}/console.log.%d{yyyy-MM-dd}"
                                 name="NAMESRV">
            <PatternLayout pattern="${layout.pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${log.home}" maxDepth="1">
                    <IfFileName glob="console.*"/>
                    <IfLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>
